{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Blazor WebAssembly App",
            "type": "blazorwasm",
            "request": "launch",
            "preLaunchTask": "buildWasm",
            "cwd": "${workspaceFolder}/BootstrapBlazor.WebAssembly",
            "browser": "chrome"
        },
        {
            "name": "Blazor Web App",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/BootstrapBlazor.Web/bin/Debug/Net10.0/BootstrapBlazor.Web.dll",
            "args": [],
            "cwd": "${workspaceFolder}/BootstrapBlazor.Web",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/BootstrapBlazor.Web/Views",
                "/wwwroot": "${workspaceFolder}/BootstrapBlazor.Web/wwwroot"
            }
        }
    ]
}