@namespace BootstrapBlazor
@inherits BootstrapComponentBase

@if (Visible)
{
    if (Mode == RenderMode.Body)
    {
        <td @ref="@Element" class="@Classname">@ChildContent</td>
    }
    else if (Mode == RenderMode.Head)
    {
        <th @ref="@Element" scope="col">
            @if (TitleContent is not null)
            {
                @TitleContent
            }
            else
            {
                @Title
            }
        </th>
    }
}
