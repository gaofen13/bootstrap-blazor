@namespace BootstrapBlazor
@inherits BootstrapComponentBase
@typeparam TItem

<tr @ref="@Element" class="@Class" style="@Style" @attributes="@AdditionalAttributes">
    @if (Table?.MultiSelection == true)
    {
        <th scope="col" class="table-checkbox">
            <input type="checkbox" class="form-check-input" checked="@Checked" @onchange="@OnCheckedChanged" />
        </th>
    }
    @ChildContent
</tr>