@namespace BootstrapBlazor
@inherits BootstrapComponentBase
@typeparam TItem

<tr @ref="@Element" class="@Class" style="@Style" @attributes="@AdditionalAttributes">
    @if (MultiSelection)
    {
        <th scope="col">
            <BootstrapCheckbox Value="@Checked" ValueChanged="@OnCheckedChanged" />
        </th>
    }
    @ChildContent
</tr>