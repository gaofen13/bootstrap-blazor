@namespace BootstrapBlazor
@inherits BootstrapComponentBase

<div class="@Classname" style="@Style" role="alert" @attributes="@AdditionalAttributes">
    @if (!string.IsNullOrWhiteSpace(Title))
    {
        <h4 class="alert-heading">@Title</h4>
    }
    @if (IconContent is not null)
    {
        @IconContent
    }
    <div>
        @if (!string.IsNullOrWhiteSpace(Message))
        {
            @Message
        }
        else
        {
            @ChildContent
        }
    </div>
    @if (ShowCloseBtn)
    {
        <BootstrapCloseButton OnClick="@OnClickCloseBtn"></BootstrapCloseButton>
    }
</div>
