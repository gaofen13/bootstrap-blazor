@namespace BootstrapBlazor
@inherits BootstrapComponentBase

<li @ref="@Element" class="@Classname" style="@Style" @attributes="@AdditionalAttributes">
    <a href="javascript:void(0)" class="nav-link dropdown-toggle" @onclick="@OnclickActivator">@Title</a>
    <ul class="@MenuClassname">
        @if (ChildContent != null)
        {
            @ChildContent
        }
        else
        {
            if (!string.IsNullOrWhiteSpace(HeaderText))
            {
                <li><h6 class="dropdown-header">@HeaderText</h6></li>
            }
            @MenuContent
        }
    </ul>
</li>

@if (Show)
{
    <div class="fade show" style="position:fixed;top:0;bottom:0;left:0;right:0;" @onclick="@OnclickActivator"></div>
}