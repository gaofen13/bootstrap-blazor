@namespace BootstrapBlazor
@inherits BootstrapComponentBase

<div @ref="@Element" class="@Classname" style="@Style" role="alert" @attributes="@AdditionalAttributes">
    @if (HasHeader)
    {
        <div class="@HeaderClassname" style="font-size:larger">
            @IconContent
            <strong class="me-auto">@Title</strong>
            @if (ToastInstance?.LiveOptions.AutoClose == true && ToastInstance.LiveOptions.CountdownTimeout > 0)
            {
                <small>@ToastInstance.CountdownTimeout 秒后关闭</small>
            }
            @if (ToastInstance?.LiveOptions?.ManualClose == true)
            {
                <BootstrapCloseButton OnClick="@Close"></BootstrapCloseButton>
            }
        </div>
    }
    <div class="toast-body">
        @if (ChildContent is not null)
        {
            @ChildContent
        }
        else
        {
            @Message
        }
    </div>
</div>